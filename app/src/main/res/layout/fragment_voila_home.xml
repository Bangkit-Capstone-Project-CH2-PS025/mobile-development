<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:ignore="HardcodedText, ContentDescription"
    tools:context=".ui.VoilaHomeFragment">

    <ImageView
        android:id="@+id/splashscreen_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splashscreen_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_default_bg"
        android:layout_width="0dp"
        android:layout_height="648dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/verification_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splashscreen_bg2" />

    <ImageView
        android:id="@+id/iv_default_voila_home"
        android:layout_width="308dp"
        android:layout_height="247dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_voila_home"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_default_bg" />

    <TextView
        android:id="@+id/tv_default_voila_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/voila"
        android:textColor="@color/purple"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_default_voila_home" />

    <TextView
        android:id="@+id/tv_default_voila_home1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Cool! you add a new plan!"
        android:textSize="20sp"
        android:textColor="#FD865B"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_voila_home"
        app:layout_constraintStart_toStartOf="@+id/tv_default_voila_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_voila_home" />

    <TextView
        android:id="@+id/tv_default_voila_home2"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="All your plans have been saved to your itinerary bookmark. Check them out!"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_voila_home1"
        app:layout_constraintStart_toStartOf="@+id/tv_default_voila_home1"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_voila_home1" />

    <com.itinergo.utils.SecondaryButton
        android:id="@+id/btn_to_home"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/istok_web_bold"
        android:text="Back to Home"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_voila_home2" />


</androidx.constraintlayout.widget.ConstraintLayout>