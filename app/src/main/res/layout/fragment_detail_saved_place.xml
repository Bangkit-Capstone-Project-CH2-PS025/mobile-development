<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail_saved_place"
    tools:context=".ui.savedplace.DetailSavedPlaceFragment"
    tools:ignore="SmallSp,HardcodedText,ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/find_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/istok_web_bold"
            android:text="Detail Saved Place"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/baseline_arrow_circle_left_24"
            app:layout_constraintBottom_toBottomOf="@+id/find_trip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/find_trip" />

        <TextView
            android:id="@+id/tv_trip_name_saved_detail"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Bali Trip"
            android:textColor="@color/purple"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_budget_detail_saved"
            android:layout_width="113dp"
            android:layout_height="26dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/rate_background"
            android:gravity="center"
            android:text="Rp300.000"
            app:layout_constraintBottom_toBottomOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintStart_toEndOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintTop_toTopOf="@+id/tv_trip_name_saved_detail" />

        <ImageView
            android:id="@+id/iv_default_1"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:src="@drawable/planning_bg"
            app:layout_constraintStart_toStartOf="@+id/tv_default_day1"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_day1" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/purple"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_3"
            app:layout_constraintEnd_toEndOf="@+id/iv_bullet_1"
            app:layout_constraintStart_toStartOf="@+id/iv_bullet_1"
            app:layout_constraintTop_toTopOf="@+id/tv_default_day1" />

        <ImageView
            android:id="@+id/iv_bullet_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bullet_plan"
            app:layout_constraintBottom_toBottomOf="@+id/tv_default_day1"
            app:layout_constraintEnd_toStartOf="@+id/tv_default_day1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_trip_name_saved_detail" />

        <ImageView
            android:id="@+id/iv_bullet_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bullet_plan"
            app:layout_constraintBottom_toBottomOf="@+id/tv_default_day2"
            app:layout_constraintEnd_toEndOf="@+id/iv_bullet_1"
            app:layout_constraintStart_toStartOf="@+id/iv_bullet_1"
            app:layout_constraintTop_toTopOf="@+id/tv_default_day2" />

        <ImageView
            android:id="@+id/iv_bullet_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bullet_plan"
            app:layout_constraintBottom_toBottomOf="@+id/tv_default_day3"
            app:layout_constraintEnd_toEndOf="@+id/iv_bullet_2"
            app:layout_constraintStart_toStartOf="@+id/iv_bullet_2"
            app:layout_constraintTop_toTopOf="@+id/tv_default_day3" />

        <TextView
            android:id="@+id/tv_default_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Day 1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_trip_name_saved_detail" />
        <TextView
            android:id="@+id/tv_day1_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_1"
            app:layout_constraintStart_toStartOf="@+id/iv_default_1"
            app:layout_constraintTop_toTopOf="@+id/iv_default_1"
            tools:text="Itinerary 1" />

        <TextView
            android:id="@+id/tv_day1_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/tv_day1_1"
            app:layout_constraintStart_toStartOf="@+id/tv_day1_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_day1_1"
            tools:text="Itinerary 2" />

        <TextView
            android:id="@+id/tv_day1_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/tv_day1_2"
            app:layout_constraintStart_toStartOf="@+id/tv_day1_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_day1_2"
            tools:text="Itinerary 3" />

        <ImageView
            android:id="@+id/iv_default_2"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:src="@drawable/planning_bg"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_1"
            app:layout_constraintStart_toStartOf="@+id/iv_default_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_day2" />

        <TextView
            android:id="@+id/tv_default_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Day 2"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/iv_default_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_1" />

        <TextView
            android:id="@+id/tv_day2_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/iv_default_2"
            app:layout_constraintTop_toTopOf="@+id/iv_default_2"
            tools:text="Itinerary 4" />

        <TextView
            android:id="@+id/tv_day2_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/tv_day2_1"
            app:layout_constraintStart_toStartOf="@+id/tv_day2_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_day2_1"
            tools:text="Itinerary 5" />

        <TextView
            android:id="@+id/tv_day2_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/tv_day2_2"
            app:layout_constraintStart_toStartOf="@+id/tv_day2_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_day2_2"
            tools:text="Itinerary 6" />

        <ImageView
            android:id="@+id/iv_default_3"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/planning_bg"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_2"
            app:layout_constraintStart_toStartOf="@+id/tv_default_day3"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_day3" />

        <TextView
            android:id="@+id/tv_default_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Day 3"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/iv_default_2"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_2" />
        <TextView
            android:id="@+id/tv_day3_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@+id/iv_default_3"
            app:layout_constraintTop_toTopOf="@+id/iv_default_3"
            tools:text="Itinerary 7" />

        <TextView
            android:id="@+id/tv_day3_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/tv_day3_1"
            app:layout_constraintStart_toStartOf="@+id/tv_day3_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_day3_1"
            tools:text="Itinerary 8" />

        <TextView
            android:id="@+id/tv_day3_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="@+id/tv_day3_2"
            app:layout_constraintStart_toStartOf="@+id/tv_day3_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_day3_2"
            tools:text="Itinerary 9" />


        <com.itinergo.utils.SecondaryButton
            android:id="@+id/btn_finish_detail"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Finish"
            android:textColor="@color/purple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_3" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>