<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_detail_saved_place"
    tools:context=".ui.savedplace.DetailSavedPlaceFragment"
    tools:ignore="SmallSp,HardcodedText,ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_trip_name_saved_detail"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Bali Trip"
            android:textColor="@color/purple"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_budget_detail_saved"
            android:layout_width="113dp"
            android:layout_height="26dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/rate_background"
            android:gravity="center"
            android:text="Rp300.000"
            app:layout_constraintBottom_toBottomOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintStart_toEndOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintTop_toTopOf="@+id/tv_trip_name_saved_detail" />

        <ImageView
            android:id="@+id/iv_default_1"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:src="@drawable/planning_bg"
            app:layout_constraintStart_toStartOf="@+id/tv_default_day1"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_day1" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/purple"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_3"
            app:layout_constraintEnd_toEndOf="@+id/iv_bullet_1"
            app:layout_constraintStart_toStartOf="@+id/iv_bullet_1"
            app:layout_constraintTop_toTopOf="@+id/tv_default_day1" />

        <ImageView
            android:id="@+id/iv_bullet_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bullet_plan"
            app:layout_constraintBottom_toBottomOf="@+id/tv_default_day1"
            app:layout_constraintEnd_toStartOf="@+id/tv_default_day1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_trip_name_saved_detail" />

        <ImageView
            android:id="@+id/iv_bullet_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bullet_plan"
            app:layout_constraintBottom_toBottomOf="@+id/tv_default_day2"
            app:layout_constraintEnd_toEndOf="@+id/iv_bullet_1"
            app:layout_constraintStart_toStartOf="@+id/iv_bullet_1"
            app:layout_constraintTop_toTopOf="@+id/tv_default_day2" />

        <ImageView
            android:id="@+id/iv_bullet_3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bullet_plan"
            app:layout_constraintBottom_toBottomOf="@+id/tv_default_day3"
            app:layout_constraintEnd_toEndOf="@+id/iv_bullet_2"
            app:layout_constraintStart_toStartOf="@+id/iv_bullet_2"
            app:layout_constraintTop_toTopOf="@+id/tv_default_day3" />

        <TextView
            android:id="@+id/tv_default_day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Day 1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/tv_trip_name_saved_detail"
            app:layout_constraintTop_toBottomOf="@+id/tv_trip_name_saved_detail" />

        <ImageView
            android:id="@+id/iv_default_2"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:src="@drawable/planning_bg"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_1"
            app:layout_constraintStart_toStartOf="@+id/iv_default_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_day2" />

        <TextView
            android:id="@+id/tv_default_day2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Day 2"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/iv_default_1"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_1" />

        <ImageView
            android:id="@+id/iv_default_3"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/planning_bg"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_2"
            app:layout_constraintStart_toStartOf="@+id/tv_default_day3"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_day3" />

        <TextView
            android:id="@+id/tv_default_day3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Day 3"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/iv_default_2"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_2" />

        <ImageView
            android:id="@+id/iv_default_4"
            android:layout_width="366dp"
            android:layout_height="132dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/available_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_3" />

        <ImageView
            android:id="@+id/iv_default_5"
            android:layout_width="102dp"
            android:layout_height="108dp"
            android:src="@drawable/bg_distance"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_4"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_4"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="@+id/iv_default_4"
            app:layout_constraintTop_toTopOf="@+id/iv_default_4" />

        <TextView
            android:id="@+id/tv_travel_distance_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="6 Km"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_5"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_5"
            app:layout_constraintStart_toStartOf="@+id/iv_default_5"
            app:layout_constraintTop_toTopOf="@+id/iv_default_5"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/tv_default_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Travel Distance"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_travel_distance_saved"
            app:layout_constraintEnd_toEndOf="@+id/tv_travel_distance_saved"
            app:layout_constraintStart_toStartOf="@+id/tv_travel_distance_saved"
            app:layout_constraintTop_toTopOf="@+id/iv_default_5" />

        <TextView
            android:id="@+id/tv_default_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Available Transportation"
            android:textColor="@color/purple"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_4"
            app:layout_constraintStart_toEndOf="@+id/iv_default_5"
            app:layout_constraintTop_toTopOf="@+id/iv_default_4" />

        <ImageView
            android:id="@+id/iv_default_6"
            android:layout_width="220dp"
            android:layout_height="94dp"
            android:src="@drawable/bg_transportation"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_4"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/iv_default_5"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_available" />

        <ImageView
            android:id="@+id/iv_default_7"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/bus"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_6"
            app:layout_constraintStart_toStartOf="@+id/iv_default_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_available" />

        <TextView
            android:id="@+id/tv_transportation_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="center"
            android:text="Trans Metro Dewata"
            android:textColor="@color/purple"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_default_7"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_transportation_1"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_transportation_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_default_available" />

        <TextView
            android:id="@+id/tv_budget_transportation_1"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:gravity="center"
            android:text="-Rp. 5000"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_7"
            app:layout_constraintStart_toStartOf="@+id/iv_default_7"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_7" />

        <TextView
            android:id="@+id/tv_carbon_transportation_1"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="15kg CO2"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_transportation_1"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_transportation_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_transportation_1" />

        <ImageView
            android:id="@+id/iv_default_8"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/motocycle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_6"
            app:layout_constraintStart_toEndOf="@+id/iv_default_7"
            app:layout_constraintTop_toTopOf="@+id/iv_default_6" />

        <TextView
            android:id="@+id/tv_transportation_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="center"
            android:text="Ojek Online"
            android:textColor="@color/purple"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_default_8"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_transportation_2"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_transportation_2"
            app:layout_constraintTop_toTopOf="@+id/iv_default_6" />

        <TextView
            android:id="@+id/tv_budget_transportation_2"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:gravity="center"
            android:text="-Rp. 16.000"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_8"
            app:layout_constraintStart_toStartOf="@+id/iv_default_8"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_8" />

        <TextView
            android:id="@+id/tv_carbon_transportation_2"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="15kg CO2"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_transportation_2"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_transportation_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_transportation_2" />

        <ImageView
            android:id="@+id/iv_default_9"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_marginStart="45dp"
            android:src="@drawable/motocycle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_default_6"
            app:layout_constraintStart_toEndOf="@+id/iv_default_8"
            app:layout_constraintTop_toTopOf="@+id/iv_default_6" />

        <TextView
            android:id="@+id/tv_transportation_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="center"
            android:text="Taxi"
            android:textColor="@color/purple"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/iv_default_9"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_transportation_3"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_transportation_3"
            app:layout_constraintTop_toTopOf="@+id/iv_default_6" />

        <TextView
            android:id="@+id/tv_budget_transportation_3"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:gravity="center"
            android:text="-Rp. 16.000"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_9"
            app:layout_constraintStart_toStartOf="@+id/iv_default_9"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_9" />

        <TextView
            android:id="@+id/tv_carbon_transportation_3"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_bold"
            android:gravity="center"
            android:text="15kg CO2"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_budget_transportation_3"
            app:layout_constraintStart_toStartOf="@+id/tv_budget_transportation_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_budget_transportation_2" />

        <com.itinergo.utils.SecondaryButton
            android:id="@+id/btn_finish_detail"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Save"
            android:textColor="@color/purple"
            app:layout_constraintEnd_toEndOf="@+id/iv_default_4"
            app:layout_constraintStart_toStartOf="@+id/iv_default_4"
            app:layout_constraintTop_toBottomOf="@+id/iv_default_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>