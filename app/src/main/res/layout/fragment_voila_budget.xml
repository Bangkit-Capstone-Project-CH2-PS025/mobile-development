<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.VoilaHomeFragment"
    tools:ignore="HardcodedText, ContentDescription">

    <ImageView
        android:id="@+id/splashscreen_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splashscreen_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_default_bg"
        android:layout_width="0dp"
        android:layout_height="648dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/verification_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splashscreen_bg2" />

    <ImageView
        android:id="@+id/iv_default_voila_ftrip"
        android:layout_width="308dp"
        android:layout_height="247dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_voila_ftrip"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_default_bg" />

    <TextView
        android:id="@+id/tv_default_voila_ftrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Voila!\n+50XP"
        android:textColor="@color/purple"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_default_voila_ftrip" />

    <TextView
        android:id="@+id/tv_default_voila_ftrip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="You joined a new trip"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_voila_ftrip"
        app:layout_constraintStart_toStartOf="@+id/tv_default_voila_ftrip"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_voila_ftrip" />

    <TextView
        android:id="@+id/tv_default_voila_ftrip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Please contact the owner through"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_voila_ftrip1"
        app:layout_constraintStart_toStartOf="@+id/tv_default_voila_ftrip1"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_voila_ftrip1" />

    <TextView
        android:id="@+id/tv_contact_ftrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="+628123456789"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_voila_ftrip1"
        app:layout_constraintStart_toStartOf="@+id/tv_default_voila_ftrip1"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_voila_ftrip2" />

    <com.itinergo.utils.SecondaryButton
        android:id="@+id/btn_cancel_join"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/istok_web_bold"
        android:text="Cancel Join"
        android:textColor="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_contact_ftrip" />

    <com.itinergo.utils.PrimaryButton
        android:id="@+id/btn_to_home"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Back to Home"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_cancel_join"
        app:layout_constraintStart_toStartOf="@+id/btn_cancel_join"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel_join" />


</androidx.constraintlayout.widget.ConstraintLayout>