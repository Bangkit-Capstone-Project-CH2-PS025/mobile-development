<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.verification.VerificationActivity">


    <ImageView
        android:id="@+id/splashscreen_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splashscreen_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_default_bg"
        android:layout_width="0dp"
        android:layout_height="648dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/verification_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/splashscreen_bg2" />

    <ImageView
        android:id="@+id/iv_default_verif"
        android:layout_width="224dp"
        android:layout_height="206dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_mailbox"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_default_bg" />

    <TextView
        android:id="@+id/tv_default_verif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/you_re_almost_here"
        android:textColor="@color/purple"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_default_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_default_bg"
        app:layout_constraintTop_toBottomOf="@+id/iv_default_verif" />

    <TextView
        android:id="@+id/tv_default_verif1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins"
        android:text="@string/email_has_been_sent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_verif"
        app:layout_constraintStart_toStartOf="@+id/tv_default_verif"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_verif" />

    <TextView
        android:id="@+id/tv_email_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_verif1"
        app:layout_constraintStart_toStartOf="@+id/tv_default_verif1"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_verif1"
        tools:text="angelika@itinergo.com" />

    <TextView
        android:id="@+id/tv_default_verif2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/didn_t_receive_an_email"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_email_user"
        app:layout_constraintStart_toStartOf="@+id/tv_email_user"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_user" />

    <TextView
        android:id="@+id/tv_defult_verif3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/check_email_spam"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_default_verif2"
        app:layout_constraintStart_toStartOf="@+id/tv_default_verif2"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_verif2" />

    <com.itinergo.utils.PrimaryButton
        android:id="@+id/btn_login"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_defult_verif3"
        app:layout_constraintStart_toStartOf="@+id/tv_defult_verif3"
        app:layout_constraintTop_toBottomOf="@+id/tv_defult_verif3" />

</androidx.constraintlayout.widget.ConstraintLayout>