<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".ui.home.HomeActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_view_home"
        android:layout_width="382dp"
        android:layout_height="232dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/place_of_today"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/view_home" />

    <TextView
        android:id="@+id/tv_place_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/istok_web_bold"
        android:text="@string/place_of_today"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_view_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/istok_web"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_place_today"
        app:layout_constraintTop_toBottomOf="@+id/tv_place_today"
        tools:text="Raja Ampat, Papua Barat, Indonesia" />

    <TextView
        android:id="@+id/tv_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableEnd="@drawable/ic_explore"
        android:drawablePadding="5dp"
        android:fontFamily="@font/istok_web"
        android:text="@string/explore"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_view_home"
        app:layout_constraintEnd_toEndOf="@+id/iv_view_home"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/tv_place"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <ImageView
        android:id="@+id/bg_activities"
        android:layout_width="382dp"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/activities_background"
        app:layout_constraintEnd_toEndOf="@+id/iv_view_home"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/iv_view_home"
        app:layout_constraintTop_toBottomOf="@+id/iv_view_home"
        android:contentDescription="null" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/zoro"
        app:layout_constraintBottom_toBottomOf="@+id/bg_activities"
        app:layout_constraintStart_toStartOf="@+id/bg_activities"
        app:layout_constraintTop_toTopOf="@+id/bg_activities" />

    <TextView
        android:id="@+id/tv_name_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/istok_web_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_activities"
        app:layout_constraintStart_toEndOf="@+id/iv_profile"
        app:layout_constraintTop_toTopOf="@+id/bg_activities"
        app:layout_constraintVertical_bias="0.3"
        android:text="Hi, Zoro" />

    <TextView
        android:id="@+id/tv_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/istok_web_bold"
        android:text="1227 XP"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_home"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="@+id/tv_name_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_home" />

    <ImageView
        android:id="@+id/iv_item_countries"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/item_activities_background"
        app:layout_constraintBottom_toBottomOf="@+id/bg_activities"
        app:layout_constraintStart_toEndOf="@+id/tv_name_home"
        app:layout_constraintTop_toTopOf="@+id/bg_activities"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/istok_web_bold"
        android:gravity="center"
        android:text="@string/countries"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_countries"
        app:layout_constraintStart_toStartOf="@+id/iv_item_countries"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_countries"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_countries_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        android:fontFamily="@font/istok_web_bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_countries"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_countries"
        app:layout_constraintStart_toStartOf="@+id/iv_item_countries"
        app:layout_constraintTop_toTopOf="@+id/iv_item_countries" />

    <ImageView
        android:id="@+id/iv_item_cities"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/item_activities_background"
        app:layout_constraintBottom_toBottomOf="@+id/bg_activities"
        app:layout_constraintStart_toEndOf="@+id/iv_item_countries"
        app:layout_constraintTop_toTopOf="@+id/bg_activities"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/istok_web_bold"
        android:gravity="center"
        android:text="@string/cities"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_cities"
        app:layout_constraintStart_toStartOf="@+id/iv_item_cities"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_cities"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_cities_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="20sp"
        android:fontFamily="@font/istok_web_bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_cities"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_cities"
        app:layout_constraintStart_toStartOf="@+id/iv_item_cities"
        app:layout_constraintTop_toTopOf="@+id/iv_item_cities" />

    <ImageView
        android:id="@+id/iv_item_carbon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/item_activities_background"
        app:layout_constraintBottom_toBottomOf="@+id/bg_activities"
        app:layout_constraintStart_toEndOf="@+id/iv_item_cities"
        app:layout_constraintTop_toTopOf="@+id/bg_activities"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/tv_carbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/istok_web_bold"
        android:gravity="center"
        android:text="@string/carbon"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_carbon"
        app:layout_constraintStart_toStartOf="@+id/iv_item_carbon"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_carbon"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/iv_travel_budgeting"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_travel_budgeting"
        app:layout_constraintEnd_toEndOf="@+id/bg_activities"
        app:layout_constraintStart_toStartOf="@+id/bg_activities"
        app:layout_constraintTop_toBottomOf="@+id/bg_activities" />

    <ImageView
        android:id="@+id/iv_find_trip"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_find_trip"
        app:layout_constraintBottom_toBottomOf="@+id/iv_travel_budgeting"
        app:layout_constraintEnd_toStartOf="@+id/iv_travel_budgeting"
        app:layout_constraintStart_toStartOf="@+id/bg_activities"
        app:layout_constraintTop_toTopOf="@+id/iv_travel_budgeting" />

    <ImageView
        android:id="@+id/iv_travel_tips"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_travel_tips"
        app:layout_constraintBottom_toBottomOf="@+id/iv_travel_budgeting"
        app:layout_constraintEnd_toEndOf="@+id/bg_activities"
        app:layout_constraintStart_toEndOf="@+id/iv_travel_budgeting"
        app:layout_constraintTop_toTopOf="@+id/iv_travel_budgeting" />

    <TextView
        android:id="@+id/tv_find_trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Find Trip"
        app:layout_constraintEnd_toEndOf="@+id/iv_find_trip"
        app:layout_constraintStart_toStartOf="@+id/iv_find_trip"
        app:layout_constraintTop_toBottomOf="@+id/iv_find_trip" />

    <TextView
        android:id="@+id/tv_travel_budgeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/travel_budgeting"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/iv_travel_budgeting"
        app:layout_constraintStart_toStartOf="@+id/iv_travel_budgeting"
        app:layout_constraintTop_toBottomOf="@+id/iv_travel_budgeting" />

    <TextView
        android:id="@+id/tv_travel_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="@string/travel_tips"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/iv_travel_tips"
        app:layout_constraintStart_toStartOf="@+id/iv_travel_tips"
        app:layout_constraintTop_toBottomOf="@+id/iv_travel_tips" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Plan your itinerary!"
        android:textColor="@color/purple"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/bg_activities"
        app:layout_constraintTop_toBottomOf="@+id/tv_travel_budgeting" />

    <ImageView
        android:id="@+id/bg_city"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:src="@drawable/plan_background"
        app:layout_constraintStart_toStartOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textColor="@color/purple"
        android:fontFamily="@font/istok_web_bold"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_city"
        app:layout_constraintEnd_toEndOf="@+id/bg_city"
        app:layout_constraintStart_toStartOf="@+id/bg_city"
        app:layout_constraintTop_toTopOf="@+id/bg_city" />

    <ImageView
        android:id="@+id/bg_budget"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/plan_background"
        app:layout_constraintEnd_toEndOf="@+id/bg_city"
        app:layout_constraintStart_toStartOf="@+id/bg_city"
        app:layout_constraintTop_toBottomOf="@+id/bg_city" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/istok_web_bold"
        android:text="Budget"
        android:textColor="@color/purple"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_budget"
        app:layout_constraintEnd_toEndOf="@+id/bg_budget"
        app:layout_constraintStart_toStartOf="@+id/bg_budget"
        app:layout_constraintTop_toTopOf="@+id/bg_budget" />

    <ImageView
        android:id="@+id/bg_duration"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/plan_background"
        app:layout_constraintEnd_toEndOf="@+id/bg_budget"
        app:layout_constraintStart_toStartOf="@+id/bg_budget"
        app:layout_constraintTop_toBottomOf="@+id/bg_budget" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/istok_web_bold"
        android:text="Duration"
        android:textColor="@color/purple"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_duration"
        app:layout_constraintEnd_toEndOf="@+id/bg_duration"
        app:layout_constraintStart_toStartOf="@+id/bg_duration"
        app:layout_constraintTop_toTopOf="@+id/bg_duration" />

    <ImageView
        android:id="@+id/bg_preference"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/plan_background"
        app:layout_constraintEnd_toEndOf="@+id/bg_duration"
        app:layout_constraintStart_toStartOf="@+id/bg_duration"
        app:layout_constraintTop_toBottomOf="@+id/bg_duration" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/istok_web_bold"
        android:text="Preference"
        android:textColor="@color/purple"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_preference"
        app:layout_constraintEnd_toEndOf="@+id/bg_preference"
        app:layout_constraintStart_toStartOf="@+id/bg_preference"
        app:layout_constraintTop_toTopOf="@+id/bg_preference" />

    <com.itinergo.utils.EditTextPlan
        android:layout_width="244dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_city"
        app:layout_constraintStart_toEndOf="@+id/bg_city"
        app:layout_constraintTop_toTopOf="@+id/bg_city" />

    <com.itinergo.utils.EditTextPlan
        android:id="@+id/editText"
        android:layout_width="244dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_budget"
        app:layout_constraintStart_toEndOf="@+id/bg_budget"
        app:layout_constraintTop_toTopOf="@+id/bg_budget" />

    <com.itinergo.utils.EditTextPlan
        android:id="@+id/editText2"
        android:layout_width="244dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_duration"
        app:layout_constraintStart_toEndOf="@+id/bg_duration"
        app:layout_constraintTop_toTopOf="@+id/bg_duration" />

    <com.itinergo.utils.EditTextPlan
        android:id="@+id/editText3"
        android:layout_width="244dp"
        android:layout_height="28dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_preference"
        app:layout_constraintStart_toEndOf="@+id/bg_preference"
        app:layout_constraintTop_toTopOf="@+id/bg_preference" />

    <com.itinergo.utils.SecondaryButton
        android:id="@+id/btnSearch"
        android:layout_width="204dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/istok_web_bold"
        android:text="@string/search"
        android:textColor="@color/purple"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/editText3"
        app:layout_constraintStart_toStartOf="@+id/bg_preference"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

</androidx.constraintlayout.widget.ConstraintLayout>