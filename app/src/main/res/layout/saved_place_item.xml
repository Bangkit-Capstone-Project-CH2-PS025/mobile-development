<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_default_saved_place"
        android:layout_width="366dp"
        android:layout_height="322dp"
        android:src="@drawable/saved_place_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_trip_name_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Bali Trip"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/iv_default_saved_place"
        app:layout_constraintTop_toTopOf="@+id/iv_default_saved_place" />

    <TextView
        android:id="@+id/tv_duration_name_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duration: 3 Days"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tv_trip_name_saved"
        app:layout_constraintTop_toBottomOf="@+id/tv_trip_name_saved" />

    <TextView
        android:id="@+id/tv_budget_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Budget: Rp300.000"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tv_duration_name_saved"
        app:layout_constraintTop_toBottomOf="@+id/tv_duration_name_saved" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_saved_place"
        android:layout_width="320dp"
        android:layout_height="132dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bali"
        app:layout_constraintStart_toStartOf="@+id/tv_budget_saved"
        app:layout_constraintTop_toBottomOf="@+id/tv_budget_saved"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <com.itinergo.utils.SecondaryButton
        android:id="@+id/btn_details_saved_place"
        android:layout_width="204dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="Details"
        android:textColor="@color/purple"
        app:layout_constraintEnd_toEndOf="@+id/iv_saved_place"
        app:layout_constraintStart_toStartOf="@+id/iv_saved_place"
        app:layout_constraintTop_toBottomOf="@+id/iv_saved_place" />

</androidx.constraintlayout.widget.ConstraintLayout>